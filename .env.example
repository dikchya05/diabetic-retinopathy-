# Environment Configuration Template
# Copy this file to .env and modify values as needed

# ============================================
# APPLICATION ENVIRONMENT
# ============================================
ENVIRONMENT=development
DEBUG=True

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_TITLE="Diabetic Retinopathy Detection API"
API_VERSION=1.0.0

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# ============================================
# MODEL CONFIGURATION
# ============================================
# Path to the trained model file (absolute or relative to project root)
MODEL_PATH=ml/models/best_model.pth

# Device to use for inference (auto, cpu, cuda)
USE_CUDA=auto

# Image processing settings
IMAGE_SIZE=224
MAX_IMAGE_SIZE_MB=10

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Comma-separated list of allowed hosts (* for all)
ALLOWED_HOSTS=*

# Maximum request size in MB
MAX_REQUEST_SIZE_MB=25

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable GradCAM visualization
ENABLE_GRADCAM=True

# Enable model caching
ENABLE_MODEL_CACHE=True

# ============================================
# PERFORMANCE CONFIGURATION
# ============================================
# Batch size for inference (usually 1 for REST API)
INFERENCE_BATCH_SIZE=1

# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=30

# ============================================
# PRODUCTION-SPECIFIC SETTINGS
# ============================================
# Set these when deploying to production

# For production:
# ENVIRONMENT=production
# DEBUG=False
# LOG_LEVEL=WARNING
# CORS_ORIGINS=https://yourdomain.com
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com